@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<WebBanMyPham.Context.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="content-wrapper">
    <h2>Quản lý đơn hàng</h2>

    <p>
        <a href="@Url.Action("Create", "OrderAdmin")" class="btn btn-sm btn-primary mx-2">  Tạo mới</a>
        @* @Html.ActionLink("Tạo mới", "Create")*@
        <a href="@Url.Action("Trash","OrderAdmin")" class="btn btn-sm btn-danger">  Thùng rác </a>
    </p>
    <table class="table">
        <tr>
            <th>
                Tên đơn hàng
            </th>
            <th>
                ID người dùng
            </th>
            <th>
                Trạng thái
            </th>
            <th>
                Thời gian tạo
            </th>
            <th>Chức năng</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedOnUtc)
                </td>
                <td>
                    <a href="@Url.Action("Edit", "OrderAdmin", new { id = item.Id })" class="btn btn-sm btn-success w-50 h-50 my-1">  Sửa</a>
                    <a href="@Url.Action("Details", "OrderAdmin", new { id = item.Id })" class="btn btn-sm btn-info w-50 h-50 mb-1">  Chi tiết</a>
                    <a href="@Url.Action("Destroy", "OrderAdmin", new { id = item.Id })" class="btn btn-sm btn-danger w-50 h-50">  Xóa</a>
                </td>
            </tr>
        }

    </table>
</div>