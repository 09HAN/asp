
@{
    ViewBag.Title = "Trash";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <h2>Thùng rác thương hiệu</h2>
    @using (Html.BeginForm("Destroy", "BrandAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <table class="table">
            <tr class="row">
                <th class="col-3">
                    Tên sản phẩm
                </th>
                <th class="col-3">
                    Hình đại diện
                </th>

                <th class="col-3">
                    Ngày tạo

                </th>

                <th class="col-3">
                    Chức năng
                </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr class="row">
                    <td class="col-3">@item.Name</td>
                    <td class="col-3"> <img class="img-fluid" src="~/Content/images/Brand/@item.Avatar" /></td>
                    <td class="col-3">@item.CreatedOnUtc</td>


                    <td class="col-3">
                        <a href="@Url.Action("Restore", "BrandAdmin", new { id = item.Id })" class="btn btn-sm btn-danger w-75 mb-2">Khôi phục thương hiệu</a>
                        <a href="@Url.Action("Delete", "BrandAdmin", new { id = item.Id })" class="btn btn-sm btn-danger w-75">  Xóa</a>
                    </td>
                </tr>
            }

        </table>

        <a href="@Url.Action("Index", "BrandAdmin")" class="btn btn-sm btn-info mx-2 text-right" >  Quay trở lại</a>

    }
</div>



