@model WebBanMyPham.Models.HomeModel
@{
    ViewBag.Title = "Index";
}


<div class="container">
    <!-- ========================= SECTION MAIN  ========================= -->
    <section class="section-main padding-y">
        <main class="card">
            <div class="card-body">

                <div class="row">
                    <aside class="col-lg col-md-3 flex-lg-grow-0">
                        <a href="@Url.Action("Index","Category")"> <h6>Tất cả danh mục</h6></a>
                        <nav class="nav-home-aside">
                            <ul class="menu-category">
                                @foreach (var item in Model.ListCategory)
                                {
                                    <li>
                                        <a href="#">@Html.ActionLink(item.Name, "ProductCategory", "Category", new { @Id = item.Id }, null)</a>

                                    </li>
                                }


                            </ul>
                        </nav>
                    </aside> <!-- col.// -->
                    <div class="col-md-9 col-xl-7 col-lg-7">

                        <!-- ================== COMPONENT SLIDER  BOOTSTRAP  ==================  -->
                        <div id="carousel1_indicator" class="slider-home-banner carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#carousel1_indicator" data-slide-to="0" class="active"></li>
                                <li data-target="#carousel1_indicator" data-slide-to="1"></li>
                                <li data-target="#carousel1_indicator" data-slide-to="2"></li>
                            </ol>
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img src="~/Content/images/banner.png" alt="First slide">
                                </div>
                                <div class="carousel-item">
                                    <img src="~/Content/images/banners/slide2.jpg" alt="Second slide">
                                </div>
                                <div class="carousel-item">
                                    <img src="~/Content/images/banners/slide3.jpg" alt="Third slide">
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carousel1_indicator" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carousel1_indicator" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                        <!-- ==================  COMPONENT SLIDER BOOTSTRAP end.// ==================  .// -->

                    </div> <!-- col.// -->
                    <div class="col-md d-none d-lg-block flex-grow-1">
                        <aside class="special-home-right">
                            <h6 class="bg-blue text-center text-white mb-0 p-2">Danh mục phổ biến</h6>
                            @foreach (var item in Model.ListCategory.Where(n => n.ShowOnHomePage == true).Take(3))
                            {
                                <div class="card-banner border-bottom">
                                    <div class="py-3" style="width:80%">
                                        <h6 class="card-title">@Html.ActionLink(item.Name, "ProductCategory", "Category", new { @Id = item.Id }, null)</h6>
                                        <a href="@Url.Action("ProductCategory","Category", new {@Id=item.Id})" class="btn btn-secondary btn-sm"> Xem ngay </a>
                                    </div>
                                    <img src="~/Content/images/items/@item.Avatar" height="80" class="img-bg">
                                </div>
                            }



                        </aside>
                    </div> <!-- col.// -->
                </div> <!-- row.// -->

            </div> <!-- card-body.// -->
        </main> <!-- card.// -->

    </section>
    <!-- ========================= SECTION MAIN END// ========================= -->
    <!-- =============== SECTION DEAL =============== -->
    <section class="padding-bottom">
        <div class="card card-deal">
            <div class="col-heading content-body">
                <header class="section-heading">
                    <h3 class="section-title">Giảm giá sốc</h3>
                    <p>Sản phẩm chăm sóc da</p>
                </header><!-- sect-heading -->
                <div class="timer">
                    <div> <span class="num">04</span> <small>Ngày</small></div>
                    <div> <span class="num">12</span> <small>Giờ</small></div>
                    <div> <span class="num">58</span> <small>Phút</small></div>
                    <div> <span class="num">02</span> <small>Giây</small></div>

                </div>

            </div> <!-- col.// -->
            <script src="~/Scripts/js/DongHoDemNguoc.js"></script>
            <div class="row no-gutters items-wrap">
                @foreach (var item in Model.ListProduct.Where(n => n.TypeId == 1).Take(4))
                {
                    <div class="col-md col-6">
                        <figure class="card-product-grid card-sm">

                            <a href="@Url.Action("Detail","Product", new {id=item.Id})" class="img-wrap">
                                <img src="~/Content/images/product/@item.Avatar">
                            </a>
                            <div class="text-wrap p-3">
                                <a href="#" class="title">@Html.ActionLink(item.Name, "Detail", "Product", new { @id = item.Id }, null)  </a>

                                <span class="badge badge-danger"> -20% </span>
                            </div>
                        </figure>

                    </div> <!-- col.// -->
                }
            </div>
        </div>
       
    </section>
    <!-- =============== SECTION DEAL // END =============== -->
    <!-- =============== SECTION 1 =============== -->
    <section class="padding-bottom">
        <header class="section-heading heading-line">
            <h4 class="title-section text-uppercase">Bioderma</h4>
        </header>

        <div class="card card-home-category">
            <div class="row no-gutters">
                <div class="col-md-3">

                    <div class="home-category-banner bg-light-orange">
                        <h5 class="title">BIODERMA là một thương hiệu thuộc NAOS đến từ Pháp</h5>
                        <p>Tồn tại 40 năm qua, chuyên gia tiên phong trong lĩnh vực chăm sóc da liễu</p>
                        <img src="~/Content/images/bio-tc2.jpg" class="img-bg">
                    </div>

                </div> <!-- col.// -->
                <div class="col-md-9">
                    <ul class="row no-gutters bordered-cols">
                        @foreach (var item in Model.ListProduct.Where(n => n.BrandId == 1))
                        {
                            <li class="col-6 col-lg-3 col-md-4">
                                <a href="@Url.Action("Detail","Product", new {id=item.Id})" class="item">
                                    <div class="card-body">
                                        <h6 class="title">Bioderma luôn hành động vì một làn da khỏe</h6>
                                        <img class="img-sm float-right" src="~/Content/images/product/@item.Avatar">
                                        <p class="text-muted"><i class="fa fa-map-marker-alt"></i>@item.Name</p>
                                    </div>
                                </a>
                            </li>
                        }

                    </ul>
                </div> <!-- col.// -->
            </div> <!-- row.// -->
        </div> <!-- card.// -->
    </section>
    <!-- =============== SECTION 1 END =============== -->
    <!-- =============== SECTION 2 =============== -->
    <section class="padding-bottom">
        <header class="section-heading heading-line">
            <h4 class="title-section text-uppercase">Innisfree</h4>
        </header>

        <div class="card card-home-category">
            <div class="row no-gutters">
                <div class="col-md-3">

                    <div class="home-category-banner bg-light-orange">
                        <h5 class="title">Thương hiệu theo đuổi giá trị làm đẹp có ý thức</h5>
                        <p>Công thức sạch, thuần chay, thân thiện với rặng san hô, giảm thiểu nhựa</p>
                        <img src="~/Content/images/bio-tc1.png" class="img-bg">
                    </div>

                </div> <!-- col.// -->
                <div class="col-md-9">
                    <ul class="row no-gutters bordered-cols">
                        @foreach (var item in Model.ListProduct.Where(n => n.BrandId == 2))
                        {
                            <li class="col-6 col-lg-3 col-md-4">
                                <a href="@Url.Action("Detail","Product", new {id=item.Id})" class="item">
                                    <div class="card-body">
                                        <h6 class="title">"Real-way make up"-Trang điểm thực tế </h6>
                                        <img class="img-sm float-right" src="~/Content/images/product/@item.Avatar">
                                        <p class="text-muted"><i class="fa fa-map-marker-alt"></i> @item.Name</p>
                                    </div>
                                </a>
                            </li>
                        }
                    </ul>
                </div> <!-- col.// -->
            </div> <!-- row.// -->
        </div> <!-- card.// -->
    </section>
    <!-- =============== SECTION 2 END =============== -->
    <!-- =============== SECTION ITEMS =============== -->
    <section class="padding-bottom-sm">

        <header class="section-heading heading-line">
            <h4 class="title-section text-uppercase">Sản phẩm đề xuất</h4>
        </header>

        <div class="row row-sm">
            @foreach (var item in Model.ListProduct.Where(n => n.TypeId == 2).Take(12))
            {
                <div class="col-xl-2 col-lg-3 col-md-4 col-6">
                    <div href="#" class="card card-sm card-product-grid">
                        <a href="@Url.Action("Detail","Product", new {id=item.Id})" class="img-wrap"> <img src="~/Content/images/product/@item.Avatar"> </a>
                        <figcaption class="info-wrap">
                            <a href="@Url.Action("Detail","Product", new {id=item.Id})" class="title">@item.Name</a>
                            <div class="price mt-1">@item.Price</div> <!-- price-wrap.// -->
                        </figcaption>
                    </div>
                </div> <!-- col.// -->
            }

        </div> <!-- row.// -->
    </section>
    <!-- =============== SECTION ITEMS .//END =============== -->

    <article class="my-4">
        <img src="~/Content/images/banner1.jpg" class="w-100 h-50">
    </article>
</div>
<!-- container end.// -->
